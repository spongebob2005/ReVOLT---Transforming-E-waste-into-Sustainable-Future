<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0096FF"
    tools:context=".MainActivity11">

    <EditText
        android:id="@+id/FromLocation"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter your Location"
        android:paddingStart="10dp"
        android:drawableLeft="@drawable/baseline_my_location_24"
        android:textColorHint="#F8F0F0"
        app:layout_constraintEnd_toEndOf="@+id/Locationtxt"
        app:layout_constraintStart_toStartOf="@+id/Locationtxt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ToLocation"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter your Destination"
        android:paddingStart="10dp"
        android:textColorHint="#F8F0F0"
        app:layout_constraintEnd_toEndOf="@+id/Locationtxt"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/Locationtxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Locationtxt"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOCATION"
        android:textColor="#F6EEEE"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetDirection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_bg"
        android:text="GET DIRECTION"
        app:layout_constraintEnd_toEndOf="@+id/ToLocation"
        app:layout_constraintStart_toStartOf="@+id/ToLocation"
        app:layout_constraintTop_toBottomOf="@+id/ToLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>